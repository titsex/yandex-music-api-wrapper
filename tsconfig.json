{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "dist",
		"strict": true,
		"noEmit": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"paths": {
			"@fetcher": ["./src/fetcher.ts"],
			"@api/*": ["./src/api/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
